<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/light_green" />
            <stroke
                android:width="1dp"
                android:color="@color/green" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="25dp"
                android:top="10dp"
                android:right="25dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/green" />
            <stroke
                android:width="1dp"
                android:color="#ddd" />
            <corners
                android:radius="11dp" />
            <padding
                android:left="25dp"
                android:top="10dp"
                android:right="25dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
